/*Funções Nativas do Banco de Dados
	1.Consultar Registros
	2. Alterar Registros
	3.Excluir Registros
	4.Inserir Registros
*/
-- 0.1
-- 1.Consultar Resgistros
select * from tb_cli;

-- 0.2 Alterando Registros

update tb_cli
set cli_nome = 'Hudson Silva'
where cli_cod = 25;

-- 0.3 Exluindo registros
delete from tb_cli
where cli_cod = 100;

-- inserir novo registro
insert into `bd_caso_estudo_vendas`.tb_cli(cli_cod,cli_nome,cli_cpf,cli_end_rua,cli_end_num,cli_end_bairro,cli_end_cep)
values (201,'Izabella Oliveira','12112112199','Rua teste','199','Bairro teste','1219222');
